
.banner,
	.banner image {
		width: 750rpx;
		height: 320rpx;
		/* 设置轮播图高度 */
}
.pubTitle {
		display: flex;
		justify-content: space-between;
		height: 60rpx;

		align-items: center;

		position: relative;
}
.pubTitle .txt1 {
		font-size: 35rpx;
		position: relative;
		padding-left: 30rpx;
		font-weight: bold;
}
.pubTitle .more {
		font-size: 30rpx;
		color: #717375;
		padding-right: 0rpx;
}
.dynamic {

		padding: 15rpx 0 10rpx;
		position: relative;
		left: 6rpx;
}
.dyItem {
		display: flex;
		padding: 20rpx 0;

		justify-content: space-between;
}
.dyItem .pic {
		width: 230rpx;
		height: 150rpx;
}
.dyItem .pic image {
		width: 100%;
		height: 100%;
		padding-left: 20rpx;
}
.dyItem .txt {
		width: 490rpx;
		display: flex;
		flex-direction: column;
		position: relative;
		left: 40rpx;
}
.dyItem .title {
		font-size: 26rpx;
		border-left: 100rpx;
		position: relative;
		left: 6rpx;
		font-weight: 600;
		font-size: 26rpx;
}
.dyItem .info {
		font-size: 24rpx;
		padding-top: 25rpx;
		padding-left: 10rpx;
		color: #717375;
		text-align: left;
}
.divLineX {
		background: #E4E6ED;
		width: 100%;
		height: 1rpx;
}
.container {
		width: 690rpx;
		margin-top: 20rpx;
		box-sizing: border-box;
		border-radius: 16rpx;
		overflow: hidden;
}
